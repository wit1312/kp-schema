{
    "id": "https://www.xshl.org/schemas/1/content/share/tag.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A represantion object of tag",
    "type": "object",
    "additionalProperties": false,
    "required": ["@id", "@class", "@context", "@type", "name"],
    "definitions": {
        "language": {
            "id": "#definitions/language",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
                "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
                "name": {"type": "string"}
            }
        }
    },
    "properties": {
        "@id": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "string"
                }
            ]
        },
        "@class": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "string"
                }
            ]
        },
        "@context": {
            "type": "string",
            "enum": ["tag"]
        },
        "@type": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "name": {
            "type": "string"
        },
        "scale": {
            "type": "string"
        },
        "url": {
            "type": "string"
        },
        "ru": { "$ref": "#definitions/language"},
        "en": { "$ref": "#definitions/language"},
        "by": { "$ref": "#definitions/language"},
        "md": { "$ref": "#definitions/language"},
        "kg": { "$ref": "#definitions/language"}
    }
}